{
  "manifest_version": 2,
  "name": "TcNo Rust Twitch Drop Assistant",
  "description": "An easy way to view available twitch drops for Rust",
  "version": "0.1",
  "homepage_url": "https://tcno.co/",

  "browser_action": {
	   "default_icon": {
			"16": "images/icon16x16.png",
			"32": "images/icon32x32.png",
			"48": "images/icon48x48.png",
			"128": "images/icon128x128.png"
		  },
	   "default_popup": "popup.html"
  },
    "icons": {
      "16": "images/icon16x16.png",
      "32": "images/icon32x32.png",
      "48": "images/icon48x48.png",
      "128": "images/icon128x128.png"
    },
  "web_accessible_resources": [
    "TcNoEmbed.js"
  ],
   "permissions": ["tabs", "storage", "*://*.twitch.tv/drops/*", "*://*.twitch.facepunch.com/*"],
   "content_scripts": [
    {
	  "run_at" :"document_end",
      "matches": ["*://*.twitch.tv/drops/inventory*", "*://*.twitch.facepunch.com/*"],
      "js": ["jquery-3.2.1.min.js", "inj.js"],
	  "css": ["TcNo_snackbar.css"]
    }
  ],
  "storage": {
    "managed_schema": "storage.json"
  }
}